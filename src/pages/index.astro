---
import Layout from '../layouts/Layout.astro';

const sources = [
  {
    title: 'Бермудски Троугао',
    description: 'РТС Око | Бермудски Троугао',
    href: '/bermudski',
  },
  {
    title: 'Политика',
    description: 'РТС Око | Политика',
    href: '/politika',
  },
  {
    title: 'Свет',
    description: 'РТС Око | Свет',
    href: '/svet',
  },
  {
    title: 'Историја',
    description: 'РТС Око | Спорт',
    href: '/sport',
  },
  {
    title: 'Култура',
    description: 'РТС Око |Култура',
    href: '/kultura',
  },
  {
    title: 'Економија',
    description: 'РТС Око | Економија',
    href: '/ekonomija',
  },
  {
    title: 'Спорт',
    description: 'РТС Око | Спорт',
    href: '/sport',
  },
  {
    title: 'Друштво',
    description: 'РТС Око | Друштво',
    href: '/drustvo',
  },
  {
    title: 'The Verge',
    description: 'The Verge | The Verge',
    href: '/theverge',
  }
];
---

<Layout title="ЦБ | РСС">
  <main>
    <header class="page-header">
      <h1 class="gradient-text">ЦБ | RSS</h1>
      <p>Изаберите извор</p>
    </header>

    <div class="sources-grid">
      {sources.map(source => (
        <a href={source.href} class="source-card">
          <h2>{source.title}</h2>
          <p>{source.description}</p>
          <div class="arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
              <path d="M5 12h14m-7-7l7 7-7 7"/>
            </svg>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>

<style>
  main {
    margin: 4rem auto 0;
    padding: 1rem;
    max-width: 800px;
    color: rgb(var(--text));
    font-size: 16px;
    line-height: 1.6;
    position: relative;
    z-index: 0;
  }

  main::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(1px 1px at 10% 10%, rgb(var(--text)) 50%, transparent),
      radial-gradient(1px 1px at 20% 20%, rgb(var(--blue)) 50%, transparent),
      radial-gradient(1px 1px at 30% 30%, rgb(var(--lavender)) 50%, transparent),
      radial-gradient(1px 1px at 40% 40%, rgb(var(--sapphire)) 50%, transparent),
      radial-gradient(2px 2px at 50% 50%, rgb(var(--text)) 50%, transparent),
      radial-gradient(1px 1px at 60% 60%, rgb(var(--blue)) 50%, transparent),
      radial-gradient(1px 1px at 70% 70%, rgb(var(--lavender)) 50%, transparent),
      radial-gradient(1px 1px at 80% 80%, rgb(var(--sapphire)) 50%, transparent),
      radial-gradient(2px 2px at 90% 90%, rgb(var(--text)) 50%, transparent),
      radial-gradient(1px 1px at 15% 85%, rgb(var(--blue)) 50%, transparent),
      radial-gradient(1px 1px at 25% 75%, rgb(var(--lavender)) 50%, transparent),
      radial-gradient(1px 1px at 35% 65%, rgb(var(--sapphire)) 50%, transparent),
      radial-gradient(2px 2px at 45% 55%, rgb(var(--text)) 50%, transparent),
      radial-gradient(1px 1px at 55% 45%, rgb(var(--blue)) 50%, transparent),
      radial-gradient(1px 1px at 65% 35%, rgb(var(--lavender)) 50%, transparent),
      radial-gradient(1px 1px at 75% 25%, rgb(var(--sapphire)) 50%, transparent),
      radial-gradient(2px 2px at 85% 15%, rgb(var(--text)) 50%, transparent),
      radial-gradient(1px 1px at 95% 5%, rgb(var(--blue)) 50%, transparent);
    background-size: 300px 300px;
    animation: twinkle 15s ease-in-out infinite alternate;
    z-index: -2;
    opacity: 0.3;
  }

  @keyframes twinkle {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.5;
    }
  }

  .page-header {
    text-align: center;
    margin: 2rem 0 3rem 0;
  }

  .gradient-text {
    background: linear-gradient(
      300deg,
      rgb(var(--green)) 0%,
      rgb(255, 255, 255) 25%,
      rgb(var(--lavender)) 50%,
      rgb(var(--green)) 75%,
      rgb(255, 255, 255) 100%
    );
    background-size: 200% auto;
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    animation: gradient 3s linear infinite;
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 200% 50%;
    }
  }

  .page-header h1 {
    font-size: 4rem;
    margin: 0;
  }

  .page-header p {
    margin-top: 1rem;
    color: rgb(var(--subtext0));
    font-size: 1.1rem;
  }

  .sources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    padding: 1rem;
    margin-bottom: 0;
  }

  .source-card {
    background: rgb(var(--base) / 0.8);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 1px solid rgb(var(--surface0));
    border-radius: 8px;
    padding: 1.5rem;
    text-decoration: none;
    color: rgb(var(--text));
    transition: all 0.3s ease;
    position: relative;
    z-index: 1;
  }

  .source-card:hover {
    transform: translateY(-2px);
    border-color: rgb(var(--blue));
    background: rgb(var(--mantle) / 0.8);
  }

  .source-card h2 {
    margin: 0;
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: rgb(var(--text));
    transition: color 0.2s ease;
  }

  .source-card:hover h2 {
    color: rgb(var(--lavender));
  }

  .source-card p {
    margin: 0;
    color: rgb(var(--subtext0));
    font-size: 0.9rem;
  }

  .arrow {
    position: absolute;
    right: 1.5rem;
    bottom: 1.5rem;
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  .source-card:hover .arrow {
    opacity: 1;
    transform: translateX(0);
  }

  @media (max-width: 768px) {
    .sources-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin: 0 auto;
    }
  }
</style>
